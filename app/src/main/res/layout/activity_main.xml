                android:layout_margin="8dp"
                binding:imageResource="@{model.cardViewModels[3].cardImageRes}"
                binding:hideCard="@{model.cardViewModels[3].pairFound}"
                android:onClick="@{() -> model.onCardClick(3)}"
                />

        </LinearLayout>

        <LinearLayout
